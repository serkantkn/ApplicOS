<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".launcher.fragments.WidgetScreenFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/notifGesture">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="35dp"
            android:paddingBottom="110dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:paddingBottom="10dp">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/weatherContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="2.1"
                    android:background="@drawable/widget_background"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconWeather"
                            android:src="@drawable/ic_sunny"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/weatherTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weather"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconWeather"
                            app:layout_constraintTop_toTopOf="@id/iconWeather"
                            app:layout_constraintBottom_toBottomOf="@id/iconWeather"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textWarning"
                            android:text="@string/touch_to_get_weather"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@id/iconWeather"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="130dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1:1"
                            android:id="@+id/iconForecast"
                            android:scaleType="fitXY"
                            app:layout_constraintTop_toBottomOf="@id/iconWeather"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/iconWeather"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/temperature"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="36sp"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="@id/iconForecast"
                            app:layout_constraintStart_toEndOf="@id/iconForecast"
                            app:layout_constraintBottom_toTopOf="@id/condition"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/condition"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="25sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            app:layout_constraintTop_toBottomOf="@id/temperature"
                            app:layout_constraintStart_toEndOf="@id/iconForecast"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/calendarContainer"
                    android:background="@drawable/widget_background"
                    app:layout_constraintDimensionRatio="1.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/weatherContainer"
                    app:layout_constraintEnd_toStartOf="@id/clockContainer"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconCalendar"
                            android:src="@drawable/ic_calendar"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/calendarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/takvim"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconCalendar"
                            app:layout_constraintTop_toTopOf="@id/iconCalendar"
                            app:layout_constraintBottom_toBottomOf="@id/iconCalendar"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toBottomOf="@id/iconCalendar"/>

                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:text="Ağustos"
                            android:textColor="@color/white"
                            android:textSize="27sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            app:layout_constraintStart_toEndOf="@id/tv_day"
                            app:layout_constraintTop_toTopOf="@id/tv_day"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:id="@+id/tv_dayOfMonth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_regular"
                            android:text="Perşembe"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            app:layout_constraintStart_toStartOf="@id/tv_month"
                            app:layout_constraintTop_toBottomOf="@id/tv_month"
                            app:layout_constraintEnd_toEndOf="@id/tv_month"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/clockContainer"
                    android:background="@drawable/widget_background"
                    app:layout_constraintDimensionRatio="1.1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/weatherContainer"
                    app:layout_constraintStart_toEndOf="@id/calendarContainer"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconClock"
                            android:src="@drawable/ic_clock"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/clockTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clock"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconClock"
                            app:layout_constraintTop_toTopOf="@id/iconClock"
                            app:layout_constraintBottom_toBottomOf="@id/iconClock"
                            android:layout_marginStart="10dp"/>

                        <AnalogClock
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/analogClock"
                            android:dialTint="@color/primary_transparent"
                            android:hand_hourTint="@color/accent_purple_dark_transparent"
                            android:hand_minuteTint="@color/accent_blue_dark_transparent"
                            android:hand_secondTint="@color/accent_red_dark_transparent"
                            app:layout_constraintTop_toBottomOf="@id/iconClock"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:targetApi="s" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/mediaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_background"
                    app:layout_constraintTop_toBottomOf="@id/calendarContainer"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconMedia"
                            android:src="@drawable/ic_music"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/mediaTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/media"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconMedia"
                            app:layout_constraintTop_toTopOf="@id/iconMedia"
                            app:layout_constraintBottom_toBottomOf="@id/iconMedia"
                            android:layout_marginStart="10dp"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/mediaCover"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toBottomOf="@id/iconMedia"
                            app:layout_constraintStart_toStartOf="@id/iconMedia"
                            android:layout_marginTop="10dp"
                            app:riv_corner_radius="10dp"/>

                        <TextView
                            android:id="@+id/artistName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Artist"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="19sp"
                            app:layout_constraintStart_toEndOf="@id/mediaCover"
                            app:layout_constraintTop_toTopOf="@id/mediaCover"
                            app:layout_constraintEnd_toStartOf="@id/songName"
                            app:layout_constraintHorizontal_chainStyle="packed"/>

                        <TextView
                            android:id="@+id/songName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="19sp"
                            app:layout_constraintStart_toEndOf="@id/artistName"
                            app:layout_constraintTop_toTopOf="@id/mediaCover"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:id="@+id/iconPrevious"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_previous"
                            app:layout_constraintTop_toBottomOf="@id/artistName"
                            app:layout_constraintStart_toEndOf="@id/mediaCover"
                            app:layout_constraintEnd_toStartOf="@id/iconPlayPause"/>

                        <ImageView
                            android:id="@+id/iconPlayPause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play"
                            app:layout_constraintTop_toBottomOf="@id/artistName"
                            app:layout_constraintStart_toEndOf="@id/iconPrevious"
                            app:layout_constraintEnd_toStartOf="@id/iconNext"/>

                        <ImageView
                            android:id="@+id/iconNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next"
                            app:layout_constraintTop_toBottomOf="@id/artistName"
                            app:layout_constraintStart_toEndOf="@id/iconPlayPause"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/notesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="2.1"
                    android:background="@drawable/widget_background"
                    app:layout_constraintTop_toBottomOf="@id/mediaContainer"
                    android:transitionName="notes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconNotes"
                            android:src="@drawable/ic_note"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/notesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pinned_notes"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconNotes"
                            app:layout_constraintTop_toTopOf="@id/iconNotes"
                            app:layout_constraintBottom_toBottomOf="@id/iconNotes"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconAdd"
                            android:src="@drawable/ic_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/addNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_note"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toStartOf="@id/iconAdd"
                            app:layout_constraintTop_toTopOf="@id/iconAdd"
                            app:layout_constraintBottom_toBottomOf="@id/iconAdd"
                            android:layout_marginEnd="5dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/desktopNoteRV"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconNotes"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/notespace"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"/>

                        <Space
                            android:id="@+id/notespace"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/lastAppsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="2.1"
                    android:background="@drawable/widget_background"
                    app:layout_constraintTop_toBottomOf="@id/notesContainer"
                    android:transitionName="notes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconLastApps"
                            android:src="@drawable/ic_apps"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/lastAppsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_applications"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconLastApps"
                            app:layout_constraintTop_toTopOf="@id/iconLastApps"
                            app:layout_constraintBottom_toBottomOf="@id/iconLastApps"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:minWidth="75dp"
                            android:maxWidth="150dp"
                            android:layout_height="0dp"
                            android:id="@+id/iconLast1"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/button_background"
                            android:src="@drawable/ic_apps"
                            android:padding="10dp"
                            app:layout_constraintTop_toBottomOf="@id/iconLastApps"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iconLast2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="10dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:minWidth="75dp"
                            android:maxWidth="150dp"
                            android:layout_height="0dp"
                            android:id="@+id/iconLast2"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/button_background"
                            android:src="@drawable/ic_apps"
                            android:padding="10dp"
                            app:layout_constraintTop_toBottomOf="@id/iconLastApps"
                            app:layout_constraintStart_toEndOf="@id/iconLast1"
                            app:layout_constraintEnd_toStartOf="@id/iconLast3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="10dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:minWidth="75dp"
                            android:maxWidth="150dp"
                            android:layout_height="0dp"
                            android:id="@+id/iconLast3"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/button_background"
                            android:src="@drawable/ic_apps"
                            android:padding="10dp"
                            app:layout_constraintTop_toBottomOf="@id/iconLastApps"
                            app:layout_constraintStart_toEndOf="@id/iconLast2"
                            app:layout_constraintEnd_toStartOf="@id/iconLast4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="10dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:minWidth="75dp"
                            android:maxWidth="150dp"
                            android:layout_height="0dp"
                            android:id="@+id/iconLast4"
                            app:layout_constraintDimensionRatio="1:1"
                            android:background="@drawable/button_background"
                            android:src="@drawable/ic_apps"
                            android:padding="10dp"
                            app:layout_constraintTop_toBottomOf="@id/iconLastApps"
                            app:layout_constraintStart_toEndOf="@id/iconLast3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="10dp"
                            tools:ignore="ContentDescription" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/contactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="2.1"
                    android:background="@drawable/widget_background"
                    app:layout_constraintTop_toBottomOf="@id/notesContainer"
                    android:transitionName="notes"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/iconContact"
                            android:src="@drawable/ic_person"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/contactsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favourite_contacts"
                            android:textColor="@color/white"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            app:layout_constraintStart_toEndOf="@id/iconContact"
                            app:layout_constraintTop_toTopOf="@id/iconContact"
                            app:layout_constraintBottom_toBottomOf="@id/iconContact"
                            android:layout_marginStart="10dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/desktopContactRV"
